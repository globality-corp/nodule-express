{
  "extends": "./node_modules/@total-typescript/tsconfig/tsc/no-dom/library.json",
  "compilerOptions": {
    "outDir": "lib",

    "declaration": true,
    "declarationMap": true,

    "checkJs": true,

    "forceConsistentCasingInFileNames": true,

    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__/"]
}
